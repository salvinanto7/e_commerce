<section>
    <div class="container">
        <div class="row">
            <a href="admin/add-products" class="btn btn-success ml-auto mt-3">Add products</a>
        </div>
        <table class="table mt-5">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Item</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
            <th scope="row">{{this.item}}</th>
            <td>{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.description}}</td>
            <td><img src='{{this.image}}' style='width:50px;height:70px'></td>
            </tr>
            {{/each}}
        </tbody>
        </table>
    </div>
</section>